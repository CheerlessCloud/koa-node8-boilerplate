{
  "name": "koa-node8-boilerplate",
  "version": "0.0.0-development",
  "description": "Boilerplate for NodeJS HTTP RESTful API based on Koa and koa-router",
  "main": "dist/index.js",
  "repository": "git@github.com:TeslaCtroitel/koa-node8-boilerplate.git",
  "author": "EnRoute <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "template",
    "koa",
    "koa2",
    "flexible",
    "nodejs",
    "node",
    "node8"
  ],
  "scripts": {
    "test": "npm run cover",
    "posttest": "nyc report --reporter=lcov",
    "test:dev": "ava --watch",
    "cover": "nyc ava",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src config bin",
    "lint:fix": "eslint --fix src config bin",
    "lint-staged": "lint-staged",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "@bubltechnology/customizable-commit-analyzer": "^1.0.2-0",
    "ava": "^0.19.1",
    "commitizen": "^2.9.6",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0",
    "lint-staged": "^3.5.0",
    "nyc": "^11.0.2",
    "pre-commit": "^1.2.2",
    "semantic-release": "^6.3.6"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint-config-airbnb-base",
    "parserOptions": {
      "ecmaVersion": "2017"
    },
    "env": {
      "node": true,
      "commonjs": true
    },
    "rules": {
      "strict": 0,
      "no-restricted-syntax": "off"
    }
  },
  "ava": {
    "source": [
      "src/*",
      "bin/*"
    ],
    "verbose": true
  },
  "release": {
    "analyzeCommits": "@bubltechnology/customizable-commit-analyzer"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "commitTypeMap": {
      "feat": "minor",
      "fix": "patch",
      "docs": "patch",
      "style": "null",
      "refactor": "patch",
      "perf": "patch",
      "test": "null",
      "build": "patch",
      "ci": "patch",
      "chore": "patch"
    }
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "lint"
  }
}
