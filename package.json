{
  "name": "koa-node8-boilerplate",
  "version": "0.0.0-development",
  "description": "Boilerplate for NodeJS HTTP RESTful API based on Koa and koa-router",
  "main": "dist/src/http-server.js",
  "bin": {
    "koa-http-server": "./dist/bin/http-server"
  },
  "repository": "git@github.com:TeslaCtroitel/koa-node8-boilerplate.git",
  "author": "EnRoute <nnsceg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "template",
    "koa",
    "koa2",
    "flexible",
    "nodejs",
    "node",
    "node8"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "babel . -d ./dist/ -s --ignore node_modules,test.js,spec.js,coverage,dist,.nyc_output",
    "start": "cross-env NODE_ENV=production node ./dist/bin/http-server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --require babel-register ./bin/http-server.js",
    "start:debug": "cross-env NODE_ENV=development node --inspect-brk --require babel-register ./bin/http-server.js",
    "test": "cross-env NODE_ENV=test ava",
    "test:dev": "cross-env NODE_ENV=test ava --watch",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk --require babel-register node_modules/ava/profile.js ",
    "test:cover": "cross-env NODE_ENV=test nyc ava",
    "posttest:cover": "nyc report --reporter=lcov",
    "report-coverage": "catw coverage/lcov.info | coveralls",
    "lint": "eslint --ext .json,.js .",
    "lint:format": "prettier --write \"src/**/*.js\" \"config/**/*.js\" \"bin/**/*.js\"",
    "lint:fix": "eslint --ext .json,.js --fix .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "precommit": "lint-staged && npm run test:cover",
    "prepush": "nsp check -o summary"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "bunyan": "^1.8.12",
    "cross-env": "^5.1.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "twconf": "^0.6.1"
  },
  "devDependencies": {
    "@bubltechnology/customizable-commit-analyzer": "^1.0.1",
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-do-expressions": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "bunyan-debug-stream": "^1.0.8",
    "catw": "^1.0.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsdoc": "^3.1.3",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nodemon": "^1.14.11",
    "nsp": "^3.1.0",
    "nyc": "^11.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.2.2",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "babel": {
    "retainLines": true,
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "shippedProposals": true,
          "loose": true
        }
      ]
    ],
    "plugins": [
      "syntax-object-rest-spread",
      "transform-do-expressions"
    ]
  },
  "ava": {
    "files": [
      "**/*.test.js",
      "**/*.spec.js",
      "test/**/*.js"
    ],
    "source": [
      "src/*",
      "bin/*"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "src/http-server.js",
      "config",
      "src/libs"
    ],
    "cache": true
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      "test/**/*.js",
      "dist",
      "coverage",
      ".*"
    ],
    "delay": "1000"
  },
  "release": {
    "analyzeCommits": "@bubltechnology/customizable-commit-analyzer"
  },
  "config": {
    "commitTypeMap": {
      "feat": "minor",
      "fix": "patch",
      "docs": "null",
      "style": "null",
      "refactor": "null",
      "perf": "patch",
      "test": "null",
      "build": "patch",
      "ci": "null",
      "chore": "null"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "eslint --ext .json,.js"
    ]
  }
}
